<div class="fl w-100 mw5-5 pb3 pr4-ns v-top">
  <h3>((i18n.common.summary))</h3>
  <table width="100%" border="0" cellpadding="0" cellspacing="0">
    {{#each totals}}
      {{#if value}}
        <tr>
          <td class="pv1 bb b--light-gray" style="color: #4F4F4F;font-family: "Source Sans Pro", sans-serif;font-size: 14px;font-style: normal;font-weight: 400;line-height: normal;">
            {{#eq id "Items"}}((i18n.common.items)){{/eq}}
            {{#eq id "Shipping"}}((i18n.common.shipping)){{/eq}}
            {{#eq id "Discounts"}}((i18n.common.discounts)){{/eq}}
            {{#eq id "Tax"}}((i18n.common.taxes)){{/eq}}
          </td>
          <td style="color: #38434D;font-family: 'Source Sans Pro SemiBold', sans-serif;font-size: 14px;font-style: normal;font-weight: 700;line-height: 19.307px; /* 137.909% */letter-spacing: 0.28px;" class="pv1 bb b--light-gray tr">((i18n.common.currency))
            {{formatCurrency value}}</td>
        </tr>
      {{/if}}
    {{/each}}
    {{#if value}}
      <tr>
        <td style="color: #4F4F4F;font-family: 'Source Sans Pro';font-size: 14px;font-style: normal;font-weight: 400;line-height: normal;" class="pv1 fw5">((i18n.common.total))</td>
        <td style="color: #38434D;font-family: 'Source Sans Pro SemiBold', sans-serif;font-size: 14px;font-style: normal;font-weight: 700;line-height: 19.307px; /* 137.909% */letter-spacing: 0.28px;" class="pv1 fw5 align-right tr">((i18n.common.currency))
          {{formatCurrency value}}</td>
      </tr>
    {{/if}}
  </table>
</div>